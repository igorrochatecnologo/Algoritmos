algoritmo "DependentesFuncionario"
var
     nome: caractere
     Sal, Nsal: Real
     Dep: Inteiro
inicio
      Escreva ("Qual o nome do funcionario? ")
      Leia (nome)
      Escreva ("Qual o salario do funcionario? R$ ")
      Leia (sal)
      Escreva ("Qual e a quantidade de dependentes? ")
      Leia (dep)
      Escolha dep
              Caso 0
                   Nsal <- Sal + (Sal*5/100)
              Caso 1, 2, 3
                   Nsal <- Sal + (Sal*10/100)
              Caso 4,5,6
                   Nsal <- Sal + (Sal*15/100)
              OutroCaso
                   Nsal <- Sal + (Sal*18/100)
      FimEscolha
      Escreval ("O novo salario de ", nome, " sera de R$ ", NSal:5:2)

fimalgoritmo
